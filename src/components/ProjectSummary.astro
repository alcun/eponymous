---
// Define the props expected by the ProjectSummary component

const { project } = Astro.props;
---

<li class="project-summary">
  <img src={project.data.image} alt={`Thumbnail for ${project.data.title}`} />
  <div>
    <a href={`/projects/${project.slug}`}>
      <h4>{project.data.title}</h4>
    </a>
    <p>{project.data.summary}</p>
  </div>
</li>

<style>
  li {
    border: 1px solid grey;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    text-align: center;
    overflow: clip;
    height: 100%;
    img {
      width: 100%;
      margin-bottom: 0.5rem;
      top: 0;
    }
    p {
      padding: 0 0.5rem;
    }
  }
</style>
