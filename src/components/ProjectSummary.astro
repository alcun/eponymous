---
// Define the props expected by the ProjectSummary component
interface ProjectSummaryProps {
  project: {
    slug: string;
    data: {
      title: string;
      summary: string;
      thumbnail: string;
    };
  };
}
const { project } = Astro.props as ProjectSummaryProps;
---

<style>
  .project-summary {
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    max-width: 600px;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.3); /* Lighter background for more transparency */
    border-radius: 8px;
    padding: 15px;
    backdrop-filter: blur(5px); /* Slightly less blur for a subtle effect */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.18); /* Optional: adds a subtle border for depth */
  }
  .project-summary img {
    width: 100px;
    height: 100px;
    margin-right: 20px;
    object-fit: cover;
    border-radius: 8px;
  }
  .project-summary div {
    flex: 1;
  }
  .project-summary a {
    text-decoration: none;
    color: inherit;
  }
  .project-summary h2 {
    margin: 0 0 10px 0;
    font-size: 1.5rem;
  }
  .project-summary p {
    margin: 0;
  }
</style>

<li class="project-summary">
  <img src={project.data.thumbnail} alt={`Thumbnail for ${project.data.title}`} />
  <div>
    <a href={`/projects/${project.slug}`}>
      <h2>{project.data.title}</h2>
    </a>
    <p>{project.data.summary}</p>
  </div>
</li>
