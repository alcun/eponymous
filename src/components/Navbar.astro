---

<!-- Sidebar HTML structure -->
<nav class="nav">
  <div class="burger">â˜°</div> <!-- Burger Icon -->
  <div class="nav-content">
    <div class="logo">
      <a href="/"><img src="/img/avatar.png" alt="Eponymous Mann" />
        <span>Eponymous.dev</span>
      </a>
    </div>
    <ul class="nav-links">
      <li><a href="/posts">Posts</a></li>
      <li><a href="/projects">Projects</a></li>
