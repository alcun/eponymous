<!-- Sidebar HTML structure -->
<nav class="nav" >
  <div class="nav-content">
    <a href="/" class="logo">EM</a>
    <ul class="nav-links">
      <li><a href="/blog">Blog</a></li>
      <li><a href="/projects">Projects</a></li>
