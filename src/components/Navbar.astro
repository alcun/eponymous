<!-- Styles -->
<style>
.nav {
  position: fixed;
  top: 0;
  height: auto;
  width: 100%;
  max-width: 100vw;
  z-index: 1000; /* Ensure sidebar is above other content */
  border-bottom: 1px solid var(--text-color);
  padding: 1rem;
}

.nav-content {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}

.logo h1 {
  color: var(--text-color);
}

.nav-links {
  display: flex;
