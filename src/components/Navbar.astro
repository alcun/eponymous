<!-- Styles -->
<style>
  .nav {
    display: flex;
    justify-content: space-between;
    position: fixed;
    top: 0;
    width: 100%;
    max-width: 100vw;
    z-index: 1000; /* Ensure sidebar is above other content */

  }

  .burger {
    cursor: pointer;
    display: none;
    position: fixed;
    top: 1rem;
    right: 1rem;
  }

  .nav-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    border-bottom: 1px solid transparent;
    padding: 0.75rem 1.5rem;
    background: var(--nav-background);
    backdrop-filter: saturate(180%) blur(4px);  
    transition: border ease 0.3s;
  }

  .is-scrolled {
    border-bottom: 1px solid var(--text-color);

  }

  .nav-content img {
    min-width: 36px;
    min-height: 36px;
    width: 36px;
    border-radius: 50%;
    border: 1px solid green;
    margin-right: 0.75rem;
  }

  .logo a {
    display: flex;
    align-items: center;
    color: var(--text-color);
  }

  .nav-links {
    display: flex;
    align-items: center;
    list-style: none;
    padding: 0;
    margin: 0;
    li {
      margin-left: 0.5rem;
    
    }
  }

  @media (max-width: 768px) {
    .nav-content {
      display: none;
      flex-direction: column;
      align-items: flex-start;
      width: 100%; /* Adjust width as needed */
      border: 1px solid var(--text-color); /* Add border */
      position: absolute;
      top: 3rem; /* Position below the burger icon */
      text-align: center;
      border-radius: 12px;
    }
    
    .nav-links, .logo {
      flex-direction: column;
      align-items: flex-start;
    }

    .burger {
      display: block;
    }
  }
  #theme-btn {
  font-size: 1.5rem;
  margin-left: 0.5rem;
  cursor: pointer;
  background-color: transparent;
  border: 2px solid var(--accent-color); /* Use the accent color for the border */
  padding: 0.5rem 0.75rem; /* Add some padding */
  transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition for hover effects */
  color: var(--accent-color); /* Text color matches the accent color */
  text-align: center; /* Ensure text is centered */
  text-decoration: none; /* Remove text decoration */
  display: inline-block; /* Align with other inline elements */
  border-radius: 12px; /* Slightly rounded corners for a modern look */
}

#theme-btn:hover,
#theme-btn:focus {
  background-color: var(--accent-color); /* Fill button with accent color on hover/focus */
  color: var(--background-color); /* Contrast text color on hover/focus */
}

</style>
